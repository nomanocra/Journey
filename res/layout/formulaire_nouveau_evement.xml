<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="83dp" >

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="900dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/White"
            android:gravity="center"
            android:text="Nouvel evement"
            android:textColor="@color/Gris3"
            android:textSize="75dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:textSize="10dp" />

    <TextView
        android:id="@+id/voyageEnCours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.00"
        android:text="1) Ajouter un lieu à l&apos;évenement :"
        android:textColor="@color/White"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:textSize="15dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="12 rue Tsamere, Toulouse"
        android:textSize="25dp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" " />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.00"
        android:text="2) Ajouter une description à votre evenement :"
        android:textColor="@color/White"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/TextView05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:textSize="15dp" />

    <EditText
        android:id="@+id/champNouveauVoyage"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:text="Pas de decription."
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/Black" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.00"
        android:text="3) Ajouter un media avec votre évenement (optionnel) :"
        android:textColor="@color/White"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/TextView06"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:textSize="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="101dp" >

        <Button
            android:id="@+id/boutonJeTermineMonVoyage"
            android:layout_width="200dp"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Video" />

        <Button
            android:id="@+id/button2"
            android:layout_width="200dp"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="147dp"
            android:layout_toLeftOf="@+id/boutonJeTermineMonVoyage"
            android:text="Photo" />

        <Button
            android:id="@+id/button3"
            android:layout_width="200dp"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="157dp"
            android:layout_toRightOf="@+id/boutonJeTermineMonVoyage"
            android:text="Son" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:text=" "
        android:textSize="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.68" >

    </RelativeLayout>

</LinearLayout>